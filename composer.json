{
  "name": "iet-ou/open-media-player-themes",
  "description": "Player themes for Open Media Player (built on MediaElement.js). From The Open University.",
  "keywords": [ "ouplayer", "embed", "audio", "video", "accessibility", "OpenUniversity", "IET-OU" ],
  "homepage": "http://iet-ou.github.io/open-media-player/",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "alpha",
  "time": "2012-04-11",
  "authors": [
    { "name": "Nick Freear (@nfreear)", "role": "developer" },
    { "name": "Peter Devine (@peterdevinegmd)", "role": "designer", "homepage": "http://devine.co.uk/peter/" }
  ],
  "support": {
    "issues": "https://github.com/IET-OU/open-media-player/issues",
    "source": "https://github.com/IET-OU/open-media-player-themes"
  },
  "require": {
    "iet-ou/open-media-player-core": "^2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5",
    "jakub-onderka/php-parallel-lint": "^0.9.2"
  },
  "autoload": {
    "psr-4": {
      "IET_OU\\Open_Media_Player\\": [ "themes" ]
    }
  },
  "repositories": [
    { "type": "composer", "url": "https://embed.open.ac.uk/iet-satis/" }
  ],
  "scripts": {
    "grep-ci": "grep -nri -e '>CI' -e 'CI->' -e '$CI' --exclude Base.php -- themes/*",
    "phplint": "./vendor/bin/parallel-lint --exclude vendor .",
    "phpcs": [
      "phpcs --standard=./vendor/iet-ou/open-media-player-core/phpcs.xml -n --encoding=utf-8 --extensions=php themes/* && echo OK",
      "phpcs --standard=PSR2 -n bin/* && echo OK 2"
    ],
      "phpcs-warn": [
        "phpcs --standard=./vendor/iet-ou/open-media-player-core/phpcs.xml --encoding=utf-8 --extensions=php themes/*"
      ],
      "build-theme": [
        "php bin/build.php",
        "grunt uglify:theme"
      ],
      "csslint": "grunt csslint:lax",
      "jshint": [
        "grunt jshint:themes", "grunt jshint:grunt"
      ],
      "jscs": "grunt jscs",
      "grunt": "grunt",
      "npm-install": [
        "npm install -g grunt-cli",
        "npm install grunt grunt-contrib-jshint grunt-contrib-csslint grunt-jscs grunt-contrib-uglify"
      ],
      "test": [
        "composer phplint", "composer phpcs", "composer jshint", "composer csslint"
      ],
      "echo-versions": [
        "printf 'node: '; node --version; printf 'npm: '; npm --version; grunt --version"
      ]
  }
}
